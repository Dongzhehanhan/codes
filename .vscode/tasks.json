{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe 生成C文件（非默认）", // 改label，明确用途
            "command": "C:\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build", // 取消默认，只保留build分组
            "detail": "调试器生成的任务，用于编译C语言文件。"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}", // 修正：工作目录为代码目录
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": { // 设为默认构建任务
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务，用于编译C++文件（默认）。"
        }
    ],
    "version": "2.0.0"
}